                                {
                                    <td class="EditableNameChange" contenteditable="true" style="width:10%; color:green ">@item.Coins_5_Cents</td>
                                }
                                else
                                {
                                    <td class="EditableNameChange" contenteditable="true" style="width:10%;">@item.Coins_5_Cents</td>
                                }


                                @if (@item.Coins_10_Cents <= 3)
