
<!DOCTYPE html>

<html>
<head>
    <link href="~/css/Bar.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>

<body>
    <div style="width:100%; min-width:1000px">
        <div id="LateralBar" style="width:20%; min-width:250px">
            <b id="TitleLateralLinks">GESTION DE MÁQUINAS</b><br />
            <ul>

                @*Se comprueba la autorización al acceso de los datos y solo se muestrn los links autorizados*@
                @if (ViewBag.Allowed != null)
            {
                foreach (var item in ViewBag.Allowed)
                {
                    switch (item)
                    {
                        case "ALL":
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("Index", "Home")';">Inicio</li>
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("NewMachine", "Machine")';">Alta Máquina</li>
                                <li id="LinkMachine" onclick="window.location.href = '@Url.Action("MachineList", "Machine")';">Modificación-Baja</li>
                                <li id="LinkUbication" onclick="window.location.href = '@Url.Action("MachineUbication", "Machine")';">Ubicacion</li>
                                <li id="LinkProducts" onclick="window.location.href = '@Url.Action("Products", "Machine")';">Items Máquina</li>
                                <li id="LinkStock" onclick="window.location.href = '@Url.Action("Stock", "Machine")';">Stocks Productos</li>
                                <li id="LinkStock" onclick="window.location.href = '@Url.Action("ProductsEdition", "Machine")';">Edición Productos</li>
                                <li id="LinkChange" onclick="window.location.href = '@Url.Action("Change", "Machine")';">Economía</li>
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("CloseSession", "Security")';">Cerrar Sesion</li>
                                break;
                            case "INDEX":
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("Index", "Home")';">Inicio</li>
                                break;
                            case "PRODUCTS":
                                <li id="LinkProducts" onclick="window.location.href = '@Url.Action("Products", "Machine")';">Items Máquina</li>
                                break;
                            case "STOCKS":
                                <li id="LinkStock" onclick="window.location.href = '@Url.Action("Stock", "Machine")';">Stocks Productos</li>
                                break;
                            case "PRODUCTS_EDITIONS":
                                <li id="LinkStock" onclick="window.location.href = '@Url.Action("ProductsEdition", "Machine")';">Edición Productos</li>
                                break;
                            case "NEW_MACHINE":
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("NewMachine", "Machine")';">Alta Máquina</li>
                                break;
                            case "MACHINE_LIST":
                                <li id="LinkMachine" onclick="window.location.href = '@Url.Action("MachineList", "Machine")';">Modificación-Baja</li>
                                break;
                            case "MACHINE_UBICATION":
                                <li id="LinkUbication" onclick="window.location.href = '@Url.Action("MachineUbication", "Machine")';">Ubicacion</li>
                                break;
                            case "CLOSESESSION":
                                <li id="LateralLinks" onclick="window.location.href = '@Url.Action("CloseSession", "Security")';">Cerrar Sesion</li>
                                break;
                            case "CHANGE":
                                <li id="LinkChange" onclick="window.location.href = '@Url.Action("Change", "Machine")';">Economía</li>
                                break;
                            default:
                                break;
                        }
                    }
                }

            </ul>
            <div id="CopyRight">
                &copy; Carlos Moreno Palacios
            </div>

        </div>
        <div id="NavBarBlue" style="width:75%; min-width:800px">
            <img class="responsive" src="~/images/banner1.png" />
        </div>
       </div>
    

    <div id="RenderBody" style="min-width:900px">
        @RenderBody()
    </div>


</body>
</html>
